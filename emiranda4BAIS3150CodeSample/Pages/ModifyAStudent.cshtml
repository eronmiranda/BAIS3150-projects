@page
@model emiranda4BAIS3150CodeSample.Pages.ModifyAStudentModel
@{
    ViewData["Title"] = "Modify a Student - emiranda4";
}
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
<h1 class="display-4">Modify a Student</h1>
<hr class="my-4">
<div>
    <h4 class="alert-success">@Model.FormMessage</h4>
    <form method="post">
        <div class="form-group row align-items-end">
            <div class="col-2">
                <label asp-for="StudentID" class="form-label">Student ID</label>
                <input type="text" asp-for="StudentID" placeholder="ex. johndoe1" class="form-control">
            </div>
            <div class="col-auto">
                <span asp-validation-for="StudentID" class="alert-danger"></span>
                <br />
                <span class="alert-danger">@Model.ErrorMessage</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button asp-page-handler="Search" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
@if (Model.ExistingStudent != null && !Model.Disable)
{
    <div>
        <form method="post">
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="StudentID" class="form-label">Student ID</label>
                    <input type="text" asp-for="StudentID" readonly value="@Model.ExistingStudent.StudentID" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input type="text" asp-for="FirstName" value="@Model.ExistingStudent.FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input type="text" asp-for="LastName" value="@Model.ExistingStudent.LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" asp-for="Email" placeholder="ex. johndoe@nait.ca" value="@Model.ExistingStudent.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="ProgramCode" class="form-label">Program Code</label>
                    <input type="text" asp-for="ProgramCode" placeholder="ex. BAIST" value="@Model.ExistingStudent.ProgramCode" class="form-control" />
                    <span asp-validation-for="ProgramCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <button asp-page-handler="Submit" name="Submit" class="btn btn-success" disabled="@Model.Disable" onclick="return confirm('Are you sure you want to modify this?')">Submit</button>
                </div>
            </div>
        </form>
    </div>
}